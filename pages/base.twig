{% macro navlink(current_page, name, title) %}
<li class="nav-item">
  <a class="nav-link{% if current_page == name %} active{% endif %}" href="?p={{name}}">{{title}}</a>
</li>
{% endmacro %}
<!doctype html>
<html lang="cs">
<head>
  <meta charset="utf-8">
  <title>{% block title %}{% endblock %} - Konference</title>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="main.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark container-fluid">
    <a class="navbar-brand" href="?p={{default_page}}">Konference</a>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        {{ _self.navlink(current_page,'home','Hlavní stránka') }}
        {% if not user %}
          {{ _self.navlink(current_page,'register','Registrace') }}
        {% endif %}
      </ul>
    </div>
    <div class="me-auto">
      {% if user %}
        <form action="?p={{current_page}}" method="post">
          <input type="hidden" name="a" value="logout">
          <!-- SVG ikona: https://icons.getbootstrap.com/icons/person-fill/ -->
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
          </svg>
          {{ user.jmeno }}
          <input type="submit" value="Odhlásit">
        </form>
      {% else %}
        <form action="?p={{current_page}}" method="post">
          <input type="hidden" name="a" value="login">
          Login: <input type="text" name="user">
          Heslo: <input type="password" name="password">
          <input type="submit" value="Přihlásit">
        </form>
      {% endif %}
    </div>
  </nav>
{% block content %}
Žádný obsah
{% endblock %}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous">
  </script>
</body>
</html>